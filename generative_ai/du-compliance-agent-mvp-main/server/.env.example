# DU Compliance Agent MVP - Environment Configuration
# Copy this file to .env and configure as needed

# =============================================================================
# LLM MODE CONFIGURATION
# =============================================================================

# Mode: "dr-gateway" (DataRobot LLM Gateway) or "direct-llm" (direct LLM endpoint)
# Default: dr-gateway
MODE=dr-gateway

# =============================================================================
# DataRobot Gateway Mode (MODE=dr-gateway)
# =============================================================================

# DataRobot API endpoint URL (required for dr-gateway mode)
# Example: https://app.datarobot.com/api/v2
DATAROBOT_ENDPOINT=

# DataRobot API token for authentication (required for dr-gateway mode)
DATAROBOT_API_TOKEN=

# =============================================================================
# Direct LLM Mode (MODE=direct-llm)
# =============================================================================

# URL of deployed LLM endpoint (required for direct-llm mode)
# Example: https://api.openai.com/v1
LLM_ENDPOINT=

# API key for the deployed LLM endpoint (required for direct-llm mode)
LLM_API_KEY=

# Reasoning effort for models that support it (only applies in direct-llm mode)
# Values: low, medium, high
# Leave empty or comment out to disable
# Note: Only works with models that support reasoning_effort parameter (e.g., OpenAI o1, o3 series)
REASONING_EFFORT=low

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model name to use for chat completions
# Default: gpt-4o-mini
CHAT_COMPLETIONS_MODEL=gpt-4o-mini

# LLM request timeout in seconds
# Default: 300
LLM_TIMEOUT=300

# =============================================================================
# OTHER CONFIGURATION
# =============================================================================

# Gatekeeper confidence threshold (0-100)
# Default: 70
GATEKEEPER_CONFIDENCE_THRESHOLD=70
